<div class="page-header">
  <h1><%= @queried_kind.try(:pluralize).try(:titleize) || "Records" %></h1>
</div>
<div class="well">
    <%= link_to(
      "All",
      records_path,
      class: "text-white btn btn-lg btn-default"
    ) %>
  <% CangarooUI::Record.select(:kind).distinct.pluck(:kind).each do |kind| %>
    <% bootstrap_class = CangarooUI::RecordsHelper.record_kind_to_bootstrap_class(kind) %>
    <%= link_to(
      kind.pluralize.titleize,
      records_path(kind: kind),
      class: "text-white btn btn-lg btn-#{bootstrap_class}"
    ) %>
  <% end %>
</div>
<%= render partial: "records" %>
